<main class="dashboard">
    <section id="dashboard">
        <h2>Animals in Need</h2>
        {{#if animals}}
        <ul class="card-wrapper">
            <!-- Display a li with information about every post (if any)-->
            {{#each animals}}
            <li class="card">
                <img src="{{this.imageUrl}}" />
                <p>
                    <strong>Name: </strong><span class="name">{{this.name}}</span>
                </p>
                <p>
                    <strong>Location: </strong><span class="location">{{this.location}}</span>
                </p>
                <p><strong>Need of:</strong><span class="need-of">{{this.needs}}</span></p>
                <a class="details-btn" href="/animals/details/{{this._id}}">Details</a>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <div id="no-post">
            <h2>There are no animals in need now! </h2>
        </div>
        {{/if}}
    </section>
</main>